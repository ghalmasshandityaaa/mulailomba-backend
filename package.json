{
  "name": "mulailomba-backend",
  "version": "1.0.0",
  "description": "",
  "author": "Ghalmas Shanditya Putra Agung",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "src/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:webpack": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "8.4.7",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "8.4.7",
    "@nestjs/cqrs": "8.0.5",
    "@nestjs/jwt": "10.0.3",
    "@nestjs/passport": "9.0.3",
    "@nestjs/platform-express": "8.4.7",
    "@nestjs/terminus": "8.1.1",
    "@nestjs/typeorm": "9.0.1",
    "bcrypt": "5.1.0",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.1",
    "cookie": "0.5.0",
    "cookie-parser": "1.4.6",
    "crypto": "^1.0.1",
    "handlebars": "4.7.7",
    "joi": "17",
    "joi-class-decorators": "1.1.0",
    "jwks-rsa": "3.0.1",
    "lodash": "^4.17.21",
    "luxon": "^3.3.0",
    "nanoid": "3.3.4",
    "nanoid-dictionary": "4.3.0",
    "nestjs-pino": "2.6.0",
    "nodemailer": "6.9.1",
    "passport": "0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "4.0.1",
    "pg": "8.8.0",
    "pino-http": "7.1.0",
    "typeorm": "0.3.10"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.2",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/bcrypt": "5.0.0",
    "@types/cookie": "0.5.1",
    "@types/express": "4.17.13",
    "@types/jest": "29.1.2",
    "@types/lodash": "^4.14.195",
    "@types/luxon": "^3.3.0",
    "@types/nanoid-dictionary": "4.2.0",
    "@types/node": "16.0.0",
    "@types/nodemailer": "6.4.7",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/pg": "8.6.5",
    "@types/pino": "6.3.11",
    "@types/pino-http": "5.8.1",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "29.1.2",
    "jest-ts-auto-mock": "2.1.0",
    "pino-pretty": "6.0.0",
    "prettier": "2.3.2",
    "run-script-webpack-plugin": "0.1.1",
    "rxjs": "7.2.0",
    "ts-jest": "29.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5",
    "webpack": "5.75.0",
    "webpack-bundle-analyzer": "4.7.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@mulailomba/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@mulailomba/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@mulailomba/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@mulailomba/user(|/.*)$": "<rootDir>/libs/user/src/$1",
      "^@mulailomba/organizer(|/.*)$": "<rootDir>/libs/organizer/src/$1",
      "^@mulailomba/mailer(|/.*)$": "<rootDir>/libs/mailer/src/$1",
      "^@mulailomba/banner(|/.*)$": "<rootDir>/libs/banner/src/$1"
    }
  }
}
